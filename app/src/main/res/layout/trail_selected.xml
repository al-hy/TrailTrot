<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.ahy.myapplication.SelectedTrailActivity"
        android:orientation="vertical">

        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto-->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp"-->
            <!--android:layout_weight="0"-->
            <!--android:orientation="horizontal">-->


        <android.support.v7.widget.RecyclerView
            android:id="@+id/trailPhotos"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0">

        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="#40000000"
                android:layout_marginRight="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currently"/>


                <ImageView
                    android:id="@+id/currentWeather"
                    android:layout_width="150px"
                    android:layout_height="150px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentTemperature"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/weeklyForecast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectedTrailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingBottom="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/selectedReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:textSize="10sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/address_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"/>

        </LinearLayout>

            <ListView
                android:nestedScrollingEnabled="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:id="@+id/userReview"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ListView>
    </LinearLayout>
</ScrollView>